# Docker uchun muhit o'zgaruvchilari
# Nusxa oling: cp env.docker.example .env
# Keyin .env da TG_BOT_TOKEN va TG_ADMIN_IDS ni to'ldiring

# Ilova
NODE_ENV=production
APP_PORT=3000
API_PREFIX=api
APP_API_PREFIX=api
APP_BASE_URL=http://localhost:3000/

# PostgreSQL (docker-compose dagi postgres servisi)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=faberlic
DB_PASSWORD=faberlic_secret
DB_NAME=faberlic_db

# Telegram Bot (majburiy)
TG_BOT_TOKEN=your_bot_token_from_botfather
TG_ADMIN_IDS=123456789,987654321
